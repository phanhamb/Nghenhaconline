<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:id="@+id/imagebaihatyeuthich"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    
    <TextView
        android:textColor="#363363"

        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/textbaihatyeuthich"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/imagebaihatyeuthich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#8c8a8a"
        android:textSize="16sp"
        android:singleLine="true"
        android:id="@+id/texttencasibaihatyeuthich"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/imagebaihatyeuthich"
        android:layout_below="@id/textbaihatyeuthich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@drawable/iconlove"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/imagyeuthich"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>